@using TestingApp.ViewModels
@model List<UserRolesViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h1>All Users</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Balance</th>
            <th>Comment</th>
            <th>Open Checkout Date</th>
            <th>Open Checkout Value</th>
            <th>Roles</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.Username</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Balance</td>
            <td>@user.Comment</td>
            <td>@user.OpenCheckoutDate</td>
            <td>@user.OpenCheckoutValue</td>
            <td>@user.Role</td>
            <td>
                <a class="btn btn-primary" asp-controller="UserRoles" asp-action="Edit" asp-route-userId="@user.Id">Edit User</a> |
                <a class="btn btn-primary" asp-controller="UserRoles" asp-action="Details" asp-route-userId="@user.Id">Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>