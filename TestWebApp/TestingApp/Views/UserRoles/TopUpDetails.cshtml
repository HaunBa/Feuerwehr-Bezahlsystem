@using ViewModels
@model PaymentVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@("Payment " + Model.PaymentId + " Details")</h1>

 <dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Date)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Date)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.CashAmount)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.CashAmount) €
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Description)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Description)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Executor.UserName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Executor.UserName)
    </dd>
    
</dl>

<a class="btn btn-warning" onclick="history.go(-1)">Go Back</a>